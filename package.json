{
  "name": "violet-to-green",
  "displayName": "Violet To Green",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:violet-to-green.helloWorld",
    "onCommand:violet-to-green.linkAutomatically",
    "onCommand:violet-to-green.refresh",
    "onView:violet-to-green-sidebar"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "violet-to-green-sidebar-view",
          "title": "Violet To Green",
          "icon": "media/checklist.svg"
        }
      ]
    },
    "views": {
      "violet-to-green-sidebar-view": [
        {
          "type": "webview",
          "id": "violet-to-green-selection",
          "name": "Selection",
          "icon": "media/checklist.svg",
          "contextualTitle": "Selection"
        },
        {
          "type": "webview",
          "id": "violet-to-green-readability",
          "name": "Readability Metrics",
          "icon": "media/checklist.svg",
          "contextualTitle": "Readability Metrics"
        },
        {
          "type": "webview",
          "id": "violet-to-green-links",
          "name": "Links",
          "icon": "media/checklist.svg",
          "contextualTitle": "Links"
        }
      ]
    },
    "commands": [
      {
        "command": "violet-to-green.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "violet-to-green.refresh",
        "category": "VioletToGreen",
        "title": "Refresh"
      },
      {
        "command": "violet-to-green.linkAutomatically",
        "category": "VioletToGreen",
        "title": "Link Automatically"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack --config ./build/node-extension.webpack.config.js",
    "watch": "concurrently \"rollup -c -w\" \"webpack --watch --config ./build/node-extension.webpack.config.js\"",
    "package": "webpack --mode production --devtool hidden-source-map --config ./build/node-extension.webpack.config.js",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-typescript": "^8.1.0",
    "@tsconfig/svelte": "^1.0.10",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.20.47",
    "@types/polka": "^0.5.1",
    "@types/vscode": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.15.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "rollup": "^2.3.4",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.31.0",
    "svelte-check": "^1.1.23",
    "svelte-preprocess": "^4.6.1",
    "ts-loader": "^8.0.11",
    "typescript": "^4.1.2",
    "vscode-test": "^1.4.1",
    "webpack": "^5.10.0",
    "webpack-cli": "^4.2.0"
  },
  "dependencies": {
    "@rollup/plugin-json": "^4.1.0",
    "axios": "^0.26.1",
    "polka": "^0.5.2"
  }
}
